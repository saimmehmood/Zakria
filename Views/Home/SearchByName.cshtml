@{
        ViewBag.Title = "SearchByName";
        Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="form-group">
    <label>Enter Name of Item</label>
    <input class="form-control" type="text" name="Input" required />
    <br>
    <input type="button" id="b1" class="btn btn-default" value="Search" />
</div>


<div class="row">
    <div class="col-md-12">
        <div id="result2">
        </div>
     </div>
 </div>
   
@Scripts.Render("~/bundles/jquery")
<script>

    $('#b1').click(function ()
    {
        var value = $('input').val();
        //alert(value)
        $('#result2').load('/Home/SearchForAll?Input=' + value);
    });

</script>