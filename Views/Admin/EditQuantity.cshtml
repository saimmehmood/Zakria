@model Zakria.Models.Item
@using Zakria.Models

@{
    ViewBag.Title = "EditQuantity";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}


<div class="row; col-md-pull-2">
    <form action="/Admin/ChangeQuantity">
        <div class="form-group">
            <label>Name of Item</label>
            <input type="text" class="form-control" id="name" name="Name" value="@ViewBag.Item.Name" placeholder="" readonly>
        </div>

        <div class="form-group">
            <label>Model</label>
            <input type="text" class="form-control" id="model" value="@ViewBag.Item.Model" name="Model" placeholder="" readonly>
        </div>

        <div class="form-group">
            <label>Quantity</label>
            <input type="number" class="form-control" id="Quantity" value="@ViewBag.Item.Quantity" name="Quantity" required>
        </div>

        <button type="submit" class="btn btn-default">Submit</button>

    </form>
</div>

