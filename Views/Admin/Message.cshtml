
@{
    ViewBag.Title = "Message";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using Zakria.Models

@foreach(Message msg in Model)
{
    <div class="form-group">
        <br>
        <label>Title</label>
        <input type="text" class="form-control" name="Title" value="@msg.Title" style="color:cornsilk" readonly>
    </div>

    <div class="form-group">
        <label>Message</label>
        <textarea rows="5" cols="50" name="Body" class="form-control" style="color:cornsilk" readonly>@msg.Body</textarea>
    </div>
   
    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" name="Email" style="color:cornsilk" value="@msg.Email" readonly>
    </div>
}

